<!-- JavaScript for Filtering -->
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const buttons = document.querySelectorAll(".filter-btn");
        const items = document.querySelectorAll(".project-item");

        buttons.forEach(button => {
            button.addEventListener("click", function () {
                const category = this.getAttribute("data-category");

                items.forEach(item => {
                    if (category === "all" || item.classList.contains(category)) {
                        item.style.display = "block";
                    } else {
                        item.style.display = "none";
                    }
                });
            });
        });
    });
</script>

<!-- CSS Styling -->
<style>
    /* Ensure uniform image size */
    .project-item img {
        width: 100%;
        height: 350px; /* Fixed height for all images */
        object-fit: cover; /* Ensures images fit properly */
        transition: transform 0.3s ease-in-out; /* Smooth transition effect */
    }

    /* Hover Zoom Effect */
    .image-container {
        overflow: hidden; /* Prevents overflow while scaling */
        border-radius: 10px; /* Soft rounded corners */
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1); /* Light shadow */
    }

        .image-container:hover img {
            transform: scale(1.1); /* Slightly enlarges the image on hover */
