<!-- JavaScript for handling the form submission -->
<script>
    document.getElementById('contactForm').addEventListener('submit', function (event) {
        event.preventDefault();

        const formData = {
            fullName: document.getElementById('name').value,
            emailAddress: document.getElementById('email').value,
            phoneNumber: document.getElementById('phone').value,
            spaceToDesign: document.getElementById('service').value,
            estimatedBudget: document.getElementById('budget').value,
            designStyle: document.getElementById('designStyle').value,
            projectTimeline: document.getElementById('projectTimeline').value,
            specialRequirements: document.getElementById('specialRequirements').value,
            heardAboutUs: document.getElementById('heardAboutUs').value,
            message: document.getElementById('message').value
        };

        // Send the data to the API
        fetch('https://localhost:7131/api/contactform', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify(formData)
        })
        .then(response => response.json())
        .then(data => {
            alert('Your message has been sent successfully!');
            // Optionally, clear the form after submission
            document.getElementById('contactForm').reset();
        })
        .catch(error => {
            console.error('Error:', error);
            alert('There was an error sending your message. Please try again later.');
        });
    });
</script>
