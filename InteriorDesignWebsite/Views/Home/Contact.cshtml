@{
    ViewData["Title"] = "Contact Us";
}

<div class="container mt-5 mb-5">
    <!-- Top Heading -->
    <div class="text-center mb-4">
        <h1 class="contactus-heading">CONTACT US</h1>
        <p class="contactus-subtext">Get in touch with us to transform your space with exceptional design!</p>
    </div>

    <!-- Row with Contact Form on Left & Contact Details (with Round Image) on Right -->
    <div class="row align-items-center">
        <!-- Left Column: Contact Form -->
        <div class="col-md-6 contact-form">
            <h3>Send Us a Message</h3>
            <form id="contactForm">
                <div class="form-group">
                    <label for="name">Full Name:</label>
                    <input type="text" id="name" name="fullName" class="form-control" placeholder="Your full name" required>
                </div>

                <div class="form-group">
                    <label for="email">Email Address:</label>
                    <input type="email" id="email" name="emailAddress" class="form-control" placeholder="Your email" required>
                </div>

                <div class="form-group">
                    <label for="phone">Phone Number:</label>
                    <input type="tel" id="phone" name="phoneNumber" class="form-control" placeholder="Your phone number" required>
                </div>

                <div class="form-group">
                    <label for="service">Space to Design:</label>
                    <select id="service" name="spaceToDesign" class="form-control" required>
                        <option value="">Select a space to design</option>
                        <option value="Interior Design">Interior Design</option>
                        <option value="Space Planning">Space Planning</option>
                        <option value="Furniture Customization">Furniture Customization</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="budget">Estimated Budget:</label>
                    <input type="number" id="budget" name="estimatedBudget" class="form-control" placeholder="Your estimated budget" required>
                </div>

                <div class="form-group">
                    <label for="designStyle">Design Style:</label>
                    <input type="text" id="designStyle" name="designStyle" class="form-control" placeholder="Preferred design style (optional)">
                </div>

                <div class="form-group">
                    <label for="projectTimeline">Project Timeline:</label>
                    <input type="text" id="projectTimeline" name="projectTimeline" class="form-control" placeholder="Expected project timeline (optional)">
                </div>

                <div class="form-group">
                    <label for="specialRequirements">Special Requirements:</label>
                    <textarea id="specialRequirements" name="specialRequirements" class="form-control" rows="4" placeholder="Any special requirements? (optional)"></textarea>
                </div>

                <div class="form-group">
                    <label for="heardAboutUs">How did you hear about us?</label>
                    <input type="text" id="heardAboutUs" name="heardAboutUs" class="form-control" placeholder="Let us know how you found us (optional)">
                </div>

                <div class="form-group">
                    <label for="message">Message:</label>
                    <textarea id="message" name="message" class="form-control" rows="4" placeholder="Tell us about your project..." required></textarea>
                </div>

                <button type="submit" class="btn btn-primary">Send Message</button>
            </form>
        </div>

        <!-- Right Column: Contact Details with Round Image -->
        <div class="col-md-6 contact-info">
            <div class="contact-image">
                <img src="~/images/img1.jpg" alt="Contact Us" class="img-fluid contactus-image rounded-circle shadow" />
            </div>
            <div class="contact-details mt-3">
                <p>
                    <strong>Address:</strong><br>
                    123 Design Avenue, Creative District<br>
                    New York, NY 10001
                </p>
                <p>
                    <strong>Phone:</strong><br>
                    +1 (555) 123-4567
                </p>
                <p>
                    <strong>Email:</strong><br>
                    info@interiordesign.com
                </p>
            </div>
        </div>
    </div>
</div>

